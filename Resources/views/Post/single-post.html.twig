<div class="row" id="{{ post.id }}">  
    <div class="col-sm-2 text-center">
        {{ post.author.username }}
    </div>
    <div class="col-sm-10">
        <div class="col-sm-12 text-right small">
            posté le {{ post.createdAt|date("d-m-Y H:i") }}
        </div>
        <hr/>
        <div class="col-sm-12 text-justify">
            {{ post.content|raw }}
        </div>
        <div class="small text-center">
            {% if post.updatedAt is not null %}
                édité le {{ post.updatedAt|date("d-m-Y H:i") }}
            {% endif %}
        </div>       
    </div>
    <div class="text-right">
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            {% include 'SimseoForumBundle:Nav:post-options.html.twig' %}
        {% endif %}
    </div>
</div>
<hr/>